//tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs", // Adjusted for better backend compatibility if needed
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Typical for Next.js since it handles compilation
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true // This can help avoid type checking errors in node_modules
    ,
    "allowJs": true,
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ]

}
